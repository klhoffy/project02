<div class="container">
	<h1 align="center">Products</h1>
	<% @products.each_slice(3) do |products| %>
		<div class="row">
			<% @products.each do |product| %>
				<div class="col-md-4">
					<%= image_tag(product.image_url, class: 'list_image', size: '260x320') %>
          <%= product.name %> <br/>
          <%= product.price %> <br/>
          <%= link_to 'Show', product_path(product) %><br/>
				</div>
			<% end %>
		</div>
	<% end %>
</div>
