<div class="container">
	<h1 align="center">Products</h1>
	<% @products.each_slice(3) do |products| %>
		<div class="row">
			<% products.each do |product| %>
				<div class="col-sm-6 col-md-4">
					<div class="thumbnail">
						<%= image_tag product.image.url(:med) %>
						<div class="caption">
          		<h3><%= product.name %></h3>
          		 <p>$<%= product.price %></p>
	          		<div><%= link_to 'Show', product_path(product), class: "btn btn-default" %>
	          		</div>
	          		<div><a href="/cart/<%= product.id %>">Add to Cart</div>
	          		
          	</div>
          </div>
		</div>
			<% end %>
		</div>
	<% end %>
</div>

