<h1>Products</h1>
<div class="container">
	<% @products.each do |product| %>
		<div>
			<%= product.name %>
		</div>
		<div>
			<%= product.description %>
		</div>
		<div>
			<%= product.category %>
		</div>
		<div>
			<%= product.quantity %>
		</div>
		<div>
			<%= product.price %>
		</div>
	<% end %>
</div>
