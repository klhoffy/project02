<div class="container">
	<h1>Login</h1>
	<%= form_for :login do |f| %>
		<div class="form-group">
			<label for="exampleInputEmail1"><%= f.label :email %></label>
			<%= f.email_field :email, class: "form-control", id: "exampleInputEmail1", placeholder: "Email" %>
		</div>
		<div class="form-group">
	    <label for="exampleInputPassword1"><%= f.label :password  %></label>
			<%= f.password_field :password, class: "form-control", id: "exampleInputPassword1", placeholder: "Password" %>
		</div>
		<div>
			<%= f.submit 'Login' %>
		</div>
	<% end %>
	<div>Don't have a login? <%= link_to "Sign Up Here", new_user_path %></div>
</div>

